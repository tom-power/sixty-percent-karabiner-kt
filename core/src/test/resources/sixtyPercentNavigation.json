{
    "title": "sixtyPercentNavigation",
    "rules": [
        {
            "description": "Down (left_control + left_arrow)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_arrow",
                        "modifiers": {
                            "optional": [
                                "any"
                            ],
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Up (left_control + right_arrow)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_arrow",
                        "modifiers": {
                            "optional": [
                                "any"
                            ],
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ]
                }
            ]
        }
    ]
}